<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="APP_JSON_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!-- Message is already formatted in JSON so just output to console -->
            <Pattern>%msg%n</Pattern>
        </layout>
    </appender>

    <logger name="com.test.app" level="debug" additivity="false">
        <appender-ref ref="APP_JSON_APPENDER"/>
    </logger>

    <root level="info">
        <appender-ref ref="JSON_WRAPPER_APPENDER"/>
    </root>
</configuration>
